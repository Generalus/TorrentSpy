<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_material"
    android:orientation="vertical"
    >

    <ImageView

    android:id="@+id/app_image"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:src="@drawable/tor_spy"

        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TorrentSpy v0.5 Beta"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/app_title"
        android:layout_above="@+id/app_description"
        android:layout_alignLeft="@+id/app_image"
        android:layout_alignStart="@+id/app_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оцените программу на Google Play!"
        android:id="@+id/app_description"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/app_title"
        android:layout_alignStart="@+id/app_title" />

</RelativeLayout>